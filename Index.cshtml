@model Hammer.Core.Models.Blog
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<div style="margin-top: 5px;"><img src="/App_Themes/Site/banner/05.jpg" /></div>
<div class="company-inf">
	<div class="box-header company-header ">
		<div class="image-click f_l">
			<a href="#" title="公司简介" style="display: block; width: 120px; height: 41px;"></a>
			<h2 style="display: none;">公司简介</h2>
		</div>
		<div class="company-date">
			现在时间：@DateTime.Now.ToString("yyy-MM-dd")
		</div>
	</div>
	<div class="company-inf-content">
		<div>
			<p><img src="@Model.PictureFolder/@Model.PictureFile"style="float: right; width: 300px;">
			@Html.Raw(Model.BlogContent)
		</p>
		</div>
	</div>
</div>
